@tailwind base;
@tailwind components;
@tailwind utilities;

*, ::before, ::after {
  box-sizing: border-box;
}

@layer base {
  html {
    @apply font-sans;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    @apply m-0 min-h-screen bg-scaffold text-[#343a40];
  }

  a {
    color: inherit;
    text-decoration: none;
  }
}

